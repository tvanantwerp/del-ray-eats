---
import restaurants from '../data/restaurants.json';
import images from '../data/images.json';

import BaseLayout from '../layouts/base.astro';
---

<BaseLayout>
	<h1>Del Ray Eats</h1>
	<ul>
		{restaurants.map(restaurant => (<li>
			<article>
				<img src={`/images/${restaurant.slug}-200-150.jpg`} />
				<h1>
					{restaurant.name}
				</h1>
			</article>
		</li>))}
	</ul>
</BaseLayout>
